{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@services/*": ["src/services/*"],
      "@helpers/*": ["src/helpers/*"],
      "@database/*": ["src/database/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"],
      "@middlewares/*": ["src/middlewares/*"],
    },
    "allowSyntheticDefaultImports": true,
  }
}